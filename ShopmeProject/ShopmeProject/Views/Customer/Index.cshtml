
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ShopmeProject.Models.Customer>
@{
    ViewBag.Title = "Manage Customer";
}
<div>
    <h2>Manage Customers</h2>
</div>
<div>
    @using (Html.BeginForm("ListByPage", "Customer", FormMethod.Get, new { @class = "form-inline m-3" }))
    {
        <input type="hidden" name="pageNum" value="1" />
        <label>&nbsp;&nbsp;</label>
        <input type="search" name="keyword" value="@ViewBag.KeyWord" class="form-control" required />
        <label>&nbsp;&nbsp;</label>
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        <label>&nbsp;&nbsp;</label>
        <button type="button" class="btn btn-secondary" onclick="clearFilter()"><i class="fas fa-eraser"></i></button>
    }

</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success text-center">@ViewBag.Message</div>
}
<div>
    <table class="table table-bordered table-striped table-hover table-responsive-xl">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>E-mail</th>
                <th>City</th>
                <th>Sate</th>
                <th>Country</th>
                <th>Enabled</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>
                        @customer.FirstName
                    </td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.city</td>
                    <td>
                        @customer.state
                    </td>
                    <td>@customer.Country.Name</td>
                    <td>
                        @*@(user.Enabled ? "Yes" : "No")*@
                        @if (customer.Enabled == true)
                        {
                            <a class="fa-solid fa-check-circle fa-2x icon-green" href="@Url.Action("SetEnabled", "Customer", new { id = customer.Id, enabled = false })" title="Disable this customer"></a>
                        }
                        @if (customer.Enabled == false)
                        {
                            <a class="fa-solid fa-check-circle fa-2x icon-dark" href="@Url.Action("SetEnabled", "Customer", new { id = customer.Id, enabled = true })" title="Enable this customer"></a>
                        }

                    </td>
                    <td>
                        <a class="fas fa-file-alt fa-2x icon-green link-detail"
                           href="@Url.Action("Detail", "Customer", new { id = customer.Id})"></a>
                        &nbsp;
                        <a class="fa-solid fa-pen-to-square fa-2x icon-green" href="@Url.Action("editCustomer", "Customer", new { id = customer.Id})" title="Edit this customer"></a>
                        &nbsp;
                        <a class="fa-solid fa-trash fa-2x icon-dark link-delete" href="@Url.Action("Delete", "Customer", new { id = customer.Id })" customertId="@customer.Id" title="Delete this customer"></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalItems > 0)
{
    <div class="text-center m-1">

        <span>Showing customer # @ViewBag.StartCount to @ViewBag.EndCount of @ViewBag.TotalItems</span>

    </div>
}
else
{
    <div class="text-center m-1">
        <span>No customer found</span>
    </div>
}

@if (ViewBag.TotalPage > 1)
{

    <nav>
        <ul class="pagination justify-content-center flex-wrap">
            <li class="@(ViewBag.CurrentPage > 1 ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = 1, label = "First" })

                <a th:replace="fragments :: page_link(1,'First')"></a>
            </li>
            <li class="@(ViewBag.CurrentPage > 1 ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.CurrentPage - 1, label = "Previous" })
            </li>
            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                <li class="@(ViewBag.CurrentPage != i ? "page-item" : "page-item active")">
                    @Html.Partial("_PageLink", new { pageNumber = i, label = i.ToString() })

                </li>

            }
            <li class="@(ViewBag.CurrentPage <  ViewBag.TotalPage ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.CurrentPage + 1, label = "Next" })

            </li>
            <li class="@(ViewBag.CurrentPage <  ViewBag.TotalPage ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.TotalPage, label = "Last" })
            </li>
        </ul>
    </nav>


}


<div class="modal fade text-center" id="confirmModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <span id="confirmText"></span>
            </div>

            <div class="modal-footer">
                <a class="btn btn-success" href="" id="yesButton">Yes</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/common_list.js")"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".link-delete").on("click", function (e) {
            e.preventDefault();
            link = $(this);
            //alert($(this).attr("href"));
            customertId = link.attr("customertId");
            $("#yesButton").attr("href", link.attr("href"));
            $("#confirmText").text("Are you sure you want to delete this customer ID " + customertId + " ?");
            $("#confirmModal").modal();
        });

        handleDefaultDetailLinkClick();

      
    });

    function clearFilter(){
		window.location = '@Url.Action("Index")';
	}


</script>


