
@{
   
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div>&nbsp;</div>


<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>
<div>&nbsp;</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success text-center">@ViewBag.Message</div>
}

@using (Html.BeginForm("saveAddress", "Address",
    FormMethod.Post,
    new { @class = "form-horizontal", style = "max-width: 600px; margin: 0 auto" }))
{
    <input type="hidden" name="address.Id" value="@Model.Id" id="customerId" />
    <div class="border border-secondary rounded p-3">

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">First Name:</label>
            <div class="col-sm-8">
                <input type="text" name="address.FirstName" class="form-control" value="@Model.FirstName"
                       required="required" maxlength="45" minlength="2" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Last Name:</label>
            <div class="col-sm-8">
                <input type="text" name="address.LastName" class="form-control" value="@Model.LastName"
                       required="required" maxlength="45" minlength="2" />
            </div>
        </div>



        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Phone Number:</label>
            <div class="col-sm-8">
                <input type="text" name="address.phoneNumber" class="form-control" value="@Model.phoneNumber"
                       required="required" maxlength="15" minlength="8" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Address Line 1:</label>
            <div class="col-sm-8">
                <input type="text" name="address.addressLine1" class="form-control" value="@Model.addressLine1"
                       required="required" maxlength="64" minlength="3" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Address Line 2:</label>
            <div class="col-sm-8">
                <input type="text" name="address.addressLine2" class="form-control" value="@Model.addressLine2"
                       maxlength="64" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">City:</label>
            <div class="col-sm-8">
                <input type="text" name="address.city" class="form-control" value="@Model.city"
                       maxlength="45" minlength="2" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Country:</label>
            <div class="col-sm-8">
                <select class="form-control" name="address.CountryId" id="country">
                    <option value="0">Select Country</option>
                    @foreach (var country in ViewBag.listCountries)
                    {
                        if (Model.CountryId == country.Id)
                        {
                            <option value="@country.Id" selected>@country.Name</option>
                        }
                        else
                        {
                            <option value="@country.Id">@country.Name</option>
                        }

                    }

                </select>
            </div>
        </div>



        <div class="form-group row">
            <label class="col-sm-4 col-form-label">State/Province:</label>
            <div class="col-sm-8">
                @*1. Option Dependent Dropdown
                     <input type="text" th:field="*{state}" class="form-control"
                      maxlength="45" minlength="3" list="listStates" />
                    <datalist id="listStates"></datalist>*@
                @*2.Option Dependent Dropdown*@
                <select name="address.state" class="form-control" id="stateList">
                    <option value="@Model.state" selected>@Model.state</option>
                </select>

            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Postal Code:</label>
            <div class="col-sm-8">
                <input type="text" name="address.postalCode" class="form-control" value="@Model.postalCode"
                       maxlength="10" minlength="2" />
            </div>
        </div>

        <div class="text-center">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}
<div>&nbsp;</div>

