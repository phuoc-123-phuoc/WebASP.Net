                            <a th:href="@{/address_book(redirect=cart)}" class="h6">Use another shipping address</a>
                        </div>
                    </div>
                </div>
            </div>*@
    </div>

    <div id="sectionEmptyCartMessage" class="text-center @if (Model.Count > 0) { <text>d-none</text> }">
        <h3>You have not chosen any products yet.</h3>
    </div>

</div>
@Html.Partial("modal_dialog")

<script type="text/javascript">
    contextPath = "@Url.Action("updateQuantity", "ShoppingCartRest")";
    currencySymbol = "@ViewBag.CURRENCY_SYMBOL";
    currencySymbolPosition = "@ViewBag.CURRENCY_SYMBOL_POSITION"
    decimalDigits = "@ViewBag.DECIMAL_DIGITS";
    decimalPointType = "@ViewBag.DECIMAL_POINT_TYPE";
    thousandsPointType = "@ViewBag.THOUSANDS_POINT_TYPE";

</script>

