@using System.Security.Claims
@{
    var user = User as ClaimsPrincipal;
    string email="";
    if (user != null)
    {
        email = user.FindFirst("email")?.Value;
        var roles = user.Claims
        .Where(c => c.Type == "role")
        .Select(c => c.Value);

    }
   

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>@ViewBag.SITE_NAME - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/richtext/richtext.min.css")
    <script src="https://kit.fontawesome.com/88f53efafd.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div>
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/site-logo/@ViewBag.SITE_LOGO" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav">


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="@Url.Action("Index","Users")">Users</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("NewUser","Users")">Create New</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Users")">View All</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="@Url.Action("Index","Category")">Categories</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("NewCategory","Category")">Create New</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Category")">View All</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="@Url.Action("Index","Brands")">Brands</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("NewBrands","Brands")">Create New</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Brands")">View All</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="@Url.Action("Index","Product")">Products</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("NewProduct","Product")">Create New</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Product")">View All</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Customer")">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","ShippingRate")">Shipping Rates</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Order")">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Report")">Sales Report</a>
                        </li>
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="@Url.Action("Index","Setting")">Settings</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#general">General</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#countries">Countries</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#states">States</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#mailServer">Mail Server</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#mailTemplates">Mail Templates</a>
                                <a class="dropdown-item" href="@Url.Action("Index","Setting")#payment">Payment</a>
                               
                            </div>
                        </li>
                       


                        <li>
                            <span class="fas fa-user fa-2x icon-silver"></span>
                        <li />
