@using ShopmeProject.ViewModels

@{

    var productId = Model.productId;
    var quantityValue = Model.quantityValue;
}
<div>
    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link linkMinus" pid="@productId" href=""><b>-</b></a>
            </li>
            <li class="page-item">
                <input type="text" value="@quantityValue" id="quantity@(productId)" 
                       onkeydown="return false;"
                       class="form-control text-center" style="width: 55px" />
            </li>
            <li class="page-item">
                <a class="page-link linkPlus" pid="@productId" href=""><b>+</b></a>
            </li>
        </ul>
    </nav>
</div>
