@model IEnumerable<ShopmeProject.Models.Product>
@{
    ViewBag.Title = "ProductIndex";
}
<div>
    <h2>Manage Products</h2>
    <a href="@Url.Action("NewProduct","Product")" class="fas fa-folder-plus fa-2x icon-dark mr-2"></a>
</div>
<div>
    @using (Html.BeginForm("ListByPage", "Product", FormMethod.Get, new { @class = "form-inline m-3", id = "searchForm" }))
    {

        <input type="hidden" name="pageNum" value="1" />

        <label>&nbsp; Category: &nbsp;</label>
        <select class="form-control" name="categoryId" id="dropdownCategory">
            <option value="0">All Category</option>
            @foreach (var cat in ViewBag.ListCategories)
            {
                
                if (ViewBag.categoryId == cat.Id)
                {
                    <option value="@cat.Id" selected>@cat.Name</option>
                }
                else
                { 
                        <option value="@cat.Id">@cat.Name</option>

                }

            }

        </select>

        <label>&nbsp; Filter: &nbsp;</label>
        <input type="search" name="keyword" value="@ViewBag.KeyWord" class="form-control" required />
        <label>&nbsp;&nbsp;</label>
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        <label>&nbsp;&nbsp;</label>
        <button type="button" class="btn btn-secondary" onclick="clearFilter()"><i class="fas fa-eraser"></i></button>
    }

</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success text-center">@ViewBag.Message</div>
}
<div>
    <table class="table table-bordered table-striped table-hover table-responsive-xl">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Main Image</th>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Enabled</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        <img style="width: 120px" alt="Main image preview" class="img-fluid"
                             src="@product.getImagePath" />
                    </td>
                    <td>
                        <a class="link-detail"
                           href="@Url.Action("Detail", "Product", new { id = product.Id})">
                        @product.Name</a>
                        
                    </td>
                    <td>@product.Brand.Name</td>
                    <td>@product.Category.Name</td>
                    <td>
                        @*@(user.Enabled ? "Yes" : "No")*@
                        @if (product.Enabled == true)
                        {
                            <a class="fa-solid fa-check-circle fa-2x icon-green" href="@Url.Action("SetEnabled", "Product", new { id = product.Id, enabled = false })" title="Disable this user"></a>
                        }
                        @if (product.Enabled == false)
                        {
                            <a class="fa-solid fa-check-circle fa-2x icon-dark" href="@Url.Action("SetEnabled", "Product", new { id = product.Id, enabled = true })" title="Enable this user"></a>
                        }

                    </td>
                    <td>
                        <a class="fas fa-file-alt fa-2x icon-green link-detail"
                           href="@Url.Action("Detail", "Product", new { id = product.Id})"></a>
                        &nbsp;
                        <a class="fa-solid fa-pen-to-square fa-2x icon-green" href="@Url.Action("Edit", "Product", new { id = product.Id})" title="Edit this user"></a>
                        &nbsp;
                        <a class="fa-solid fa-trash fa-2x icon-dark link-delete" href="@Url.Action("Delete", "Product", new { id = product.Id })" productId="@product.Id" title="Delete this user"></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalItems > 0)
{
    <div class="text-center m-1">

        <span>Showing users # @ViewBag.StartCount to @ViewBag.EndCount of @ViewBag.TotalItems</span>

    </div>
}
else
{
    <div class="text-center m-1">
        <span>No users found</span>
    </div>
}

@if (ViewBag.TotalPage > 1)
{

    <nav>
        <ul class="pagination justify-content-center flex-wrap">
            <li class="@(ViewBag.CurrentPage > 1 ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = 1, label = "First" })


            </li>
            <li class="@(ViewBag.CurrentPage > 1 ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.CurrentPage - 1, label = "Previous" })
            </li>
            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                <li class="@(ViewBag.CurrentPage != i ? "page-item" : "page-item active")">
                    @Html.Partial("_PageLink", new { pageNumber = i, label = i.ToString() })

                </li>

            }
            <li class="@(ViewBag.CurrentPage <  ViewBag.TotalPage ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.CurrentPage + 1, label = "Next" })

            </li>
            <li class="@(ViewBag.CurrentPage <  ViewBag.TotalPage ? "page-item" : "page-item disabled")">
                @Html.Partial("_PageLink", new { pageNumber = ViewBag.TotalPage, label = "Last" })
            </li>
        </ul>
    </nav>


}


<div class="modal fade text-center" id="confirmModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <span id="confirmText"></span>
            </div>

            <div class="modal-footer">
                <a class="btn btn-success" href="" id="yesButton">Yes</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/common_list.js")"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".link-delete").on("click", function (e) {
            e.preventDefault();
            link = $(this);
            //alert($(this).attr("href"));
            productId = link.attr("productId");
            $("#yesButton").attr("href", link.attr("href"));
            $("#confirmText").text("Are you sure you want to delete this product ID " + productId + " ?");
            $("#confirmModal").modal();
        });

        handleDefaultDetailLinkClick();

        $("#dropdownCategory").on("change", function () {
            $("#searchForm").submit();
        });
    });

    function clearFilter(){
		window.location = '@Url.Action("Index")';
	}


</script>

